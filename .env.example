# ============================================================
# DFS Education — Production Environment Variables
# ============================================================
# Copy this file to .env and fill in real values.
# NEVER commit .env to version control.
# ============================================================

# ─── Core Django ─────────────────────────────────────────────
# Generate a new key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=dfsscholarships.com,www.dfsscholarships.com
CSRF_TRUSTED_ORIGINS=https://dfsscholarships.com,https://www.dfsscholarships.com

# ─── Database (MySQL on cPanel) ──────────────────────────────
# Set DB_ENGINE=mysql to use MySQL, or omit/set to sqlite3 for SQLite
DB_ENGINE=mysql
DB_NAME=your_cpanel_username_dbname
DB_USER=your_cpanel_username_dbuser
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=3306

# ─── Email (SMTP) ───────────────────────────────────────────
# For cPanel email: use mail.dfsscholarships.com or cPanel SMTP settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=mail.dfsscholarships.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@dfsscholarships.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=DFS Education <noreply@dfsscholarships.com>

# ─── Security ────────────────────────────────────────────────
# Set to False if cPanel already forces HTTPS (avoids redirect loops)
SECURE_SSL_REDIRECT=False
